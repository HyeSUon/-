            break;
        case 1:
            setloc(locDecom, 8096, 416, 8192, 480);
            break;
        case 2:
            setloc(locDecom, 8096, 1760, 8192, 1824);
            break;
        case 3:
            setloc(locDecom, 8096, 3040, 8192, 3104);
