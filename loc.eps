import customText as ct;

const locComb = $L("CombinationTable");
const locDecom = $L("decomposition");
const locDiffSel = $L("difficulty");

function moveCombLoc(player) {
    switch(player) {
        case 0:
            setloc(locComb, 544, 0, 1216, 320);
            break;
        case 1:
            setloc(locComb, 6976, 0, 7648, 320);

            break;
        case 2:
            setloc(locComb, 6976, 1280, 7648, 1600);
            break;
        case 3:
            setloc(locComb, 6976, 2560, 7648, 2880);
            break;
    }
    RemoveUnitAt(1, 227, locDiffSel, P12);
}

